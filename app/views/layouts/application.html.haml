!!! html

%html

  %title 
    = full_title(yield(:title))
  
  = render 'layouts/stylesheets'
  = javascript_include_tag "application"
  = csrf_meta_tags
  
  %body
    .container
      = render 'layouts/header'

      %section.round
        - flash.each do |key, value|
          - if User.exists?
            .flash.success
              = value
          - else
            .flash.error
              = value
        = yield
      
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?